    body 
        header
            h1 Chitty Chatty
        main 
            div#welcome
                form
                    input(placeholder="room name", required, type="text")
                    button Enter Room

            div#room
                h3
                ul
                form#name
                    input(placeholder="nickname", required, type="text")
                    button Save 

                form#msg
                    input(placeholder="message", required, type="text")
                    button Send 


        script(src="/socket.io/socket.io.js") // socket.io 를 브라우저에 설치
        script(src="/public/js/app2.js")
         


